<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="id.sch.smkn13bdg.adhi.brilinkarkanfoto.PointKuFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="2dp">

            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/arc_progress"
                android:background="#FFFFFF"
                android:layout_gravity="center"
                android:layout_width="125dp"
                android:layout_height="125dp"
                custom:arc_progress="0"
                custom:arc_bottom_text="PROSES"
                custom:arc_bottom_text_size="13dp"
                custom:arc_text_color="@color/colorPrimary"
                custom:arc_finished_color="@color/colorAccent"
                custom:arc_unfinished_color="@color/colorPrimary"/>

            <TextView
                android:id="@+id/textsisatransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sisa transaksi"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="165dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="77dp"
                    android:text="POINT KU"
                    android:textSize="24sp"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/textpointku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/texttanggalpasif"
                    android:layout_marginStart="35dp"
                    android:layout_toEndOf="@+id/textView3"
                    android:text="000"
                    android:textColor="@color/colorAccent"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_below="@+id/textView3"
                    android:text="SAMPAI"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/texttanggalpasif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_marginStart="21dp"
                    android:layout_toEndOf="@+id/textView5"
                    android:text="- - -"
                    android:textSize="10sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listview01"/>
    </LinearLayout>
</FrameLayout>
