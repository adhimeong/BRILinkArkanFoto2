<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.sch.smkn13bdg.adhi.brilinkarkanfoto.QRCodeFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/kartuqrcode"
                android:layout_marginTop="2dp"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_gravity="center_horizontal"/>

            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:id="@+id/kartunokartu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:text="ID KARTU"
                android:textAlignment="center"
                android:textColor="@color/place_autocomplete_prediction_primary_text_highlight"
                android:textSize="22dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/kartunama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="NAMA"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
